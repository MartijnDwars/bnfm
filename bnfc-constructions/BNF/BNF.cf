--old-school BNF in BNFC

SyntaxNil . Syntax ::= ;
SyntaxCons . Syntax ::= Rule Syntax ;

Rule . Rule ::= "<" Ident ">" "::=" Expression ;

--Expression captures optionality
ExpressionList . Expression ::= List ;
ExpressionOpt . Expression ::= List "|" Expression ;

--Lists have implicit concatenation with spaces
ListOne . List ::= Term ;
ListCons . List ::= Term List ;

Literal . Term ::= Ident ;
NonTerm . Term ::= "<" Ident ">" ;
